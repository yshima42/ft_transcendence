// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String @unique
  avatarUrl String
  following Relationship[] @relation("following")
  followedBy Relationship[] @relation("followedBy")
}

model Relationship {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation("following",fields: [userId], references: [id])
  userId String
  targetUser User @relation("followedBy", fields: [targetUserId], references: [id])
  targetUserId String
  isFriends Boolean
  @@id([userId, targetUserId])
}
